int yPosSpaceship = 0;
int introSpaceshipState = 0;

void introSpaceshipScreenSetup() {
  size(900, 700);
  spaceBg = loadImage("space.jpg");
  spaceBg.resize(900, 700);
  font = createFont("munro.ttf", 40);
}

void introSpaceshipScreenDraw() {
  image(spaceBg, 0,0);
  if(yPosSpaceship < 180)
  {
    yPosSpaceship+=3;
  }
  else
  {
    image(beam, 50, 380);
    drawAlien(false); 
  }
  image(spaceship, 0, yPosSpaceship);

  if(introSpaceshipState == 1){
    fade();
  }
 
}
